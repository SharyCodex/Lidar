FROM osrf/ros:foxy-desktop

ENV DEBIAN_FRONTEND=noninteractive
ENV ROS_DISTRO=foxy
ENV WORKSPACE_DIR=/workspace
ENV RMW_IMPLEMENTATION=rmw_cyclonedds_cpp

WORKDIR ${WORKSPACE_DIR}
RUN mkdir -p ${WORKSPACE_DIR}/src

# Install required packages in one layer. Keep APT lists so Dev Container checks (apt search) can detect packages.
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    gnupg \
    lsb-release \
    build-essential \
    cmake \
    git \
    wget \
    curl \
    python3-pip \
    python3-rosdep \
    python3-colcon-common-extensions \
    python3-vcstool \
    ros-foxy-pcl-ros \
    ros-foxy-pcl-conversions \
    ros-foxy-visualization-msgs \
    ros-foxy-tf2-geometry-msgs \
    ros-foxy-eigen3-cmake-module \
    ros-foxy-rviz-common \
    ros-foxy-rviz-default-plugins \
    ros-foxy-rmw-cyclonedds-cpp \
    libeigen3-dev \
    libpcl-dev \
    libpcl-conversions-dev

# Initialize rosdep
RUN rosdep init || true && rosdep update || true

# Entrypoint: source ROS and overlay workspace if present
RUN printf '%s\n' '#!/bin/bash' 'set -e' \
  'source /opt/ros/'"${ROS_DISTRO}"'/setup.bash' \
  '[ -f /workspace/install/setup.bash ] && source /workspace/install/setup.bash' \
  'exec "$@"' > /entrypoint.sh \
  && chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
CMD ["/bin/bash"]
